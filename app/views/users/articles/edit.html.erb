<div class="container">
  <h2 class="text-center mb-3"><%= I18n.t(".article_edit") %></h2>
  <%= form_with model: @article, url: users_articles_update_path(id: @article.id), method: :patch, local: true do |f| %>
    <div class="field mb-3">
      <label class="form-label-common">タイトル</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field mb-3">
      <label class="form-label-common">内容</label>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    </div>
    <div class="field mb-3">
      <div><%= f.label :image %></div>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="text-center"><%= f.submit "更新する", class: "btn btn-md btn-primary" %></div>
  <% end %>
  <div class="mt-3"><%= link_to t('devise.shared.links.back'), :back %></div>
</div>

